{
    "name": "Fudan Mail Checker",
    "version": "1.0.0",
    "description": "An automatic fudan mail checker.",
    "icons": {
        "16": "16.png",
        "64": "64.png",
        "128": "128.png"
    },
    "background": {
        "persistent": true,
        "page": "background.html"
    },
    "content_scripts":[
        {
            "matches":["http://mail.fudan.edu.cn/"],
            "js":["autoSSL.js"],
            "run_at":"document_end"
        }
    ],
    "browser_action": {
        "default_icon": "128.png"
    },
    "options_page": "options.html",
    "permissions": [
        "alarms",
        "background",
        "tabs",
        "activeTab",
        "storage",
        "cookies",
        "*://*.fudan.edu.cn/"
    ],
    "manifest_version": 2
}
