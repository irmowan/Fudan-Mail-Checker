{
    "name": "Fudan Mail Checker",
    "version": "1.0.0",
    "description": "An automatic fudan mail checker.",
    "icons": {
        "16": "16.png",
        "64": "64.png",
        "128": "128.png"
    },
    "background": {
        "persistent": false,
        "page": "background.html"
    },
    "browser_action": {
        "default_icon": "128.png"
    },
    "permissions": [
        "alarms",
        "background",
        "tabs",
        "activeTab",
        "cookies",
        "*://*.fudan.edu.cn/"
    ],
    "manifest_version": 2
}
